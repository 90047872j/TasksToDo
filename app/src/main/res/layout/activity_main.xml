<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorPrimary"
        android:dividerHeight="@dimen/dimen2" />

    <RelativeLayout
        android:id="@+id/empty_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/noTasksIV"
            android:layout_width="@dimen/no_image_size"
            android:layout_height="@dimen/no_image_size"
            android:layout_centerInParent="true"
            android:src="@drawable/notasks" />

        <TextView
            android:id="@+id/empty_view_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noTasksIV"

            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/main_margin_size"
            android:layout_marginRight="@dimen/main_margin_size"
            android:fontFamily="sans-serif-medium"
            android:text="@string/empty_view_txt"
            android:textAlignment="center"
            android:textSize="@dimen/text_dimen16" />

    </RelativeLayout>

</RelativeLayout>
